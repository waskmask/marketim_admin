<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/public/images/MFav.png" type="image/png" />
    <title><%=title%></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/style/theme.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="/public/plugins/lightbox/dist/css/lightbox.min.css"
      rel="stylesheet"
    />
    <style>
      .lightboxOverlay {
        height: 100vh !important;
      }
    </style>
  </head>
  <body>
    <%- include("partials/header") %>
    <!-- main -->
    <main>
      <div class="container">
        <div class="row">
          <div class="col">
            <div class="card border-0 space_object">
              <div
                class="card-body d-flex flex-wrap gap-3 justify-content-between align-items-start"
              >
                <div>
                  <div class="sub mt-2">ID: <%-product._id%></div>
                  <div class="title pt-3 mb-0">Tr: <%-product.title.tr%></div>
                  <div class="title">De: <%-product.title.de%></div>
                </div>
                <div class="d-flex flex-wrap flex-column align-items-end gap-3">
                  <div>
                    <span class="status <%-product.status%>">Aktiv</span>
                  </div>
                  <div>
                    Hinzugef√ºgt zu: <%- new
                    Date(product.createdAt).toLocaleString() %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row g-3">
          <div class="col-md-6">
            <div class="card border-0 space_object">
              <div class="card-body">
                <div class="item-title mb-3">Produktmedien:</div>
                <div class="view-product-images">
                  <% product.images.forEach(function(imageUrl, index) { %>
                  <a
                    href="https://hl-fc.de/uploads/<%- imageUrl %>"
                    data-lightbox="product-image-set"
                    data-title="Product Image <%= index + 1 %>"
                  >
                    <img
                      src="https://hl-fc.de/uploads/<%- imageUrl %>"
                      alt="Product Image <%= index + 1 %>"
                    />
                  </a>
                  <% }); %>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="card border-0 space_object">
              <div class="card-body">
                <div class="item-title mb-1">Kategorien:</div>
                <div class="product-items">
                  <% if(product.categories && product.categories.length > 0){ %>
                  <% product.categories.forEach(function(category) { %>
                  <span class="text-capitalize"
                    ><%= category.categoryName %></span
                  >
                  <!-- Displaying the category name -->
                  <% }); %> <% } %>
                </div>

                <div class="item-title mb-1 mt-2">Markenname:</div>
                <div class="product-items">
                  <% if(product.brand && product.brand.length > 0){ %> <%
                  product.brand.forEach(function(brand) { %>
                  <img
                    class="item-logo"
                    src="https://hl-fc.de/uploads/<%= brand.brandLogo %>"
                    alt=""
                  />
                  <span class="text-capitalize"><%= brand.brandName %></span>
                  <!-- Displaying the brand name -->
                  <% }); %> <% } else {%> No brand added <% } %>
                </div>

                <div class="d-flex gap-4 flex-wrap">
                  <div>
                    <div class="item-title mb-1 mt-3">Weight:</div>
                    <div class="sub-item text-capitalize">
                      <%= product.weight.unit_vol %> <%=
                      product.weight.unit_type %>
                    </div>
                  </div>

                  <div>
                    <div class="item-title mb-1 mt-3">Unit price:</div>
                    <div class="sub-item text-capitalize">
                      <%= product.unit_price %>
                    </div>
                  </div>
                  <div>
                    <div class="item-title mb-1 mt-3">Base price:</div>
                    <div class="sub-item text-capitalize">
                      <%= product.base_price %>
                    </div>
                  </div>

                  <div>
                    <div class="item-title mb-1 mt-3">Handel klass:</div>
                    <div class="sub-item text-capitalize">
                      <% if(product.handelClass){ %>
                      <span><%= product.handelClass %></span>
                      <%} else { %> N/A <% } %>
                    </div>
                  </div>

                  <div>
                    <div class="item-title mb-1 mt-3">Package:</div>
                    <div class="sub-item text-capitalize">
                      <%= product.package_type %>
                    </div>
                  </div>
                </div>

                <div class="d-flex gap-4 flex-wrap green-items">
                  <div>
                    <div class="item-title mb-1 mt-3">Halal:</div>
                    <div class="sub-item text-capitalize">
                      <% if(product.isHalal) { %>
                      <span class="text-success">Ja</span> <% } else { %> Nein
                      <% } %>
                    </div>
                  </div>

                  <div>
                    <div class="item-title mb-1 mt-3">Bio:</div>
                    <div class="sub-item text-capitalize">
                      <% if(product.organic) { %>
                      <span class="text-success">Ja</span> <% } else { %> Nein
                      <% } %>
                    </div>
                  </div>

                  <div>
                    <div class="item-title mb-1 mt-3">Vegan:</div>
                    <div class="sub-item text-capitalize">
                      <% if(product.vegan) { %>
                      <span class="text-success">Ja</span> <% } else { %> Nein
                      <% } %>
                    </div>
                  </div>

                  <div>
                    <div class="item-title mb-1 mt-3">Vegetarian:</div>
                    <div class="sub-item text-capitalize">
                      <% if(product.vegetarian) { %>
                      <span class="text-success">Ja</span> <% } else { %> Nein
                      <% } %>
                    </div>
                  </div>

                  <div>
                    <div class="item-title mb-1 mt-3">Laktosefrei:</div>
                    <div class="sub-item text-capitalize">
                      <% if(product.lactose_free) { %>
                      <span class="text-success">Ja</span> <% } else { %> Nein
                      <% } %>
                    </div>
                  </div>

                  <div>
                    <div class="item-title mb-1 mt-3">Glutenfrei:</div>
                    <div class="sub-item text-capitalize">
                      <% if(product.gluten_free) { %>
                      <span class="text-success">Ja</span> <% } else { %> Nein
                      <% } %>
                    </div>
                  </div>
                </div>

                <div class="d-flex gap-4 flex-wrap green-items">
                  <div>
                    <div class="item-title mb-1 mt-3">Pfand:</div>
                    <div class="sub-item text-capitalize">
                      <% if(product.deposit) { %>
                      <span class="text-success">Ja</span> <% } else { %> Nein
                      <% } %>
                    </div>
                  </div>

                  <div>
                    <div class="item-title mb-1 mt-3">Ursprungsland:</div>
                    <div class="sub-item text-capitalize">
                      <% if(product.origin) { %>
                      <span class="text-success"><%-product.origin%></span> <% }
                      else { %> N/A <% } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <!-- main end -->
    <div class="custom-toast d-none"></div>
    <!-- js -->
    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/public/config.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/public/plugins/lightbox/dist/js/lightbox.min.js"></script>
    <script src="/public/js/theme.js"></script>
    <script>
      lightbox.option({
        resizeDuration: 200,
        wrapAround: true,
        // Other options here
      });
    </script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const logoutButton = document.querySelector("#logoutButton");

        if (logoutButton) {
          logoutButton.addEventListener("click", () => {
            document.cookie =
              "loginToken=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
            window.location.href = "/";
          });
        }
      });
    </script>
  </body>
</html>
