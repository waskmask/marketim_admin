<header>
  <nav>
    <div class="logo">
      <img src="/public/images/marketim.svg" alt="Logo" />
    </div>

    <div class="burger">
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </div>
    <div class="menu">
      <div class="close-menu">+</div>
      <ul>
        <li>
          <a
            class="<%= path === '/dashboard' ? 'active' : '' %>"
            href="<%= path === '/dashboard' ? 'javascript:void(0)' : '/dashboard' %>"
            >Home</a
          >
        </li>
        <li>
          <a
            class="<%= path === '/products' ? 'active' : '' %>"
            href="<%= path === '/products' ? 'javascript:void(0)' : '/products' %>"
            >Produkte</a
          >
        </li>

        <li class="menu-dd">
          <a
            class="<%= path === '/master' ? 'active' : '' %> dd-toggle"
            href="javascript:void(0)"
            >Stammdaten</a
          >
          <div class="dd-container shadow-sm">
            <ul>
              <li><a href="/product-categories">Produktkategorien</a></li>
              <li><a href="/brands">Marken</a></li>
            </ul>
          </div>
        </li>
      </ul>
    </div>
    <div class="right-menu">
      <div class="head" id="userDDToggle">
        <img src="/public/images/default-avatar.png" alt="avatar" />
      </div>
      <div class="drop-down" id="userDD">
        <div class="name text-capitalize"><%-user.fullName%></div>
        <div class="role text-capitalize"><%-user.role%></div>
        <div class="divi"></div>
        <div class="logout">
          <a href="javascript:void(0)" id="logoutButton"
            ><i class="fa-solid fa-right-from-bracket"></i> Ausloggen</a
          >
        </div>
      </div>
    </div>
  </nav>
</header>
