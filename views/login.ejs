<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/public/images/MFav.png" type="image/png" />
    <title>Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/style/theme.css" />
  </head>
  <body>
    <div class="card shadow border-light login-wrapper">
      <div class="card-body p-md-4">
        <div class="h5">Welcome back</div>
        <div class="sub mb-4">Login to your account.</div>

        <form id="login_form">
          <div class="mb-3">
            <label for="email" class="form-label">E-mail address</label>
            <input
              class="form-control"
              type="text"
              id="email"
              placeholder="Enter your Email address"
            />
          </div>
          <div class="mb-2">
            <label for="password" class="form-label">Password</label>
            <input
              class="form-control"
              type="password"
              id="password"
              placeholder="Password"
            />
          </div>
          <div class="pull-left mb-4">
            <a href="/forgot-password">Forgot password</a>
          </div>
          <button class="btn btn-primary w-100" id="loginButton" type="button">
            Login
          </button>
        </form>
      </div>
    </div>

    <!-- js -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/public/config.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script type="module">
      document.addEventListener("DOMContentLoaded", function () {
        if (localStorage.getItem("loginToken")) {
          window.location.href = "/dashboard"; // Redirect if already logged in
        }

        const emailInput = document.getElementById("email");
        const passwordInput = document.getElementById("password");
        const loginButton = document.getElementById("loginButton");

        function createAlert(target, message) {
          let errorDiv = target.nextElementSibling;
          // Check if the next sibling element is an error alert
          if (!errorDiv || !errorDiv.classList.contains("form-alert")) {
            errorDiv = document.createElement("div");
            errorDiv.classList.add("form-alert", "error");
            target.parentNode.insertBefore(errorDiv, target.nextSibling);
          }
          errorDiv.textContent = message;
          errorDiv.style.display = "block";
        }

        function clearAlert(target) {
          let errorDiv = target.nextElementSibling;
          if (errorDiv && errorDiv.classList.contains("form-alert")) {
            errorDiv.style.display = "none";
          }
        }

        loginButton.addEventListener("click", function (e) {
          e.preventDefault();

          const email = emailInput.value.trim();
          const password = passwordInput.value.trim();
          const emailRegex = /\S+@\S+\.\S+/;
          const spaceRegex = /\s/;

          // Validate email format and check for spaces
          if (!emailRegex.test(email) || spaceRegex.test(email)) {
            createAlert(
              emailInput,
              "Please enter a valid email address without spaces."
            );
            return;
          } else {
            clearAlert(emailInput);
          }

          // Check if the password is empty or contains spaces
          if (password === "" || spaceRegex.test(password)) {
            createAlert(
              passwordInput,
              password === ""
                ? "Password is required."
                : "Password should not contain spaces."
            );
            return;
          } else {
            clearAlert(passwordInput);
          }

          axios
            .post(`${API_URL}/login`, { email, password })
            .then(function (response) {
              const data = response.data;
              if (data.token) {
                const date = new Date();
                date.setTime(date.getTime() + 30 * 24 * 60 * 60 * 1000);
                const expires = `expires=${date.toUTCString()}`;

                document.cookie = `loginToken=${data.token};${expires};path=/;Secure;SameSite=Strict`;
                window.location.href = "/dashboard";
              } else {
                createAlert(loginButton, data.message);
              }
            })
            .catch(function (error) {
              let message = "An error occurred while trying to log in.";
              if (
                error.response &&
                error.response.data &&
                error.response.data.message
              ) {
                message = error.response.data.message;
              }
              createAlert(loginButton, message);
            });
        });
      });
    </script>
  </body>
</html>
